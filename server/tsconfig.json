{
	"compileOnSave": false,
	"compilerOptions": {
		"allowJs": true,
		"target": "esnext",
		"lib": ["ESNext"],
		"types": ["node"],
		"moduleResolution": "Node",
		"baseUrl": ".",
		"module": "ESNext",
		"noImplicitAny": true,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "dist"
	},
	"exclude": ["./node_modules/", "./dist", "./scripts"]
}
