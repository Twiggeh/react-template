{
	"compileOnSave": false,
	"include": ["src"],
	"compilerOptions": {
		"allowJs": true,
		"target": "es2020",
		"moduleResolution": "Node",
		"baseUrl": ".",
		"module": "esnext",
		"noImplicitAny": true,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "dist",
		"paths": {
			"*": ["node_modules/*", "src/types/*"]
		}
	}
}
