{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Chrome",
			"outFiles": ["./client/public/js/*.js", "!**/node_modules/**"],
			"request": "launch",
			"type": "pwa-chrome",
			"url": "http://localhost:5000",
			"webRoot": "${workspaceFolder}/client",
			"postDebugTask": "Linux kill webpack",
			"sourceMaps": true
		},
		{
			"name": "Development Backend",
			"cwd": "${workspaceFolder}/server",
			"outFiles": ["${workspaceFolder}/server/dist/**/*.js", "!**/node_modules/**"],
			"restart": true,
			"request": "launch",
			"type": "pwa-node",
			"runtimeExecutable": "nodemon",
			"runtimeArgs": ["--inspect-brk", "./dist/src/app.js"]
		},
		{
			"name": "TSC Watcher Client",
			"command": "tsc --noEmit -w",
			"cwd": "${workspaceFolder}/client",
			"request": "launch",
			"type": "node-terminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"name": "TSC Compiler Server",
			"command": "yarn debug",
			"cwd": "${workspaceFolder}/server",
			"request": "launch",
			"type": "node-terminal"
		},
		{
			"name": "Run Setup",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"program": "${workspaceFolder}/scripts/setup.js",
			"cwd": "${workspaceFolder}",
			"request": "launch",
			"restart": true,
			"runtimeExecutable": "node",
			"skipFiles": ["<node_internals>/**"],
			"runtimeArgs": ["--inspect-brk"],
			"type": "pwa-node"
		},
		{
			"name": "Build Scripts",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"program": "${workspaceFolder}/scripts/buildScripts.js",
			"cwd": "${workspaceFolder}",
			"request": "launch",
			"restart": true,
			"runtimeExecutable": "node",
			"skipFiles": ["<node_internals>/**"],
			"runtimeArgs": ["--inspect-brk"],
			"type": "pwa-node"
		},
		{
			"name": "Start Webpack",
			"console": "integratedTerminal",
			"program": "${workspaceFolder}/client/scripts/debug.js",
			"request": "launch",
			"runtimeExecutable": "node",
			"skipFiles": ["<node_internals>/**"],
			"type": "pwa-node"
		}
	],
	"compounds": [
		{
			"name": "start chrome debug session",
			"configurations": [
				"Start Webpack",
				"Launch Chrome",
				"TSC Watcher Client"
				//"TSC Compiler Server",
				//"Development Backend"
			],
			//	"preLaunchTask": "start Webpack",
			"stopAll": true
		}
	]
}
